<%- include("partials/header.ejs"); -%>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <p><i class="fas fa-sign-in-alt"></i> User Login</p>
      <%- include('partials/messages.ejs') %>
      <form action="/users/login" method="POST" autocomplete="off">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-dark btn-block mt-2">Login</button>
      </form>
      <!-- ? Register button, you can unhide if you want. -->
      <!-- <p>No Account? <a href="/users/register">Register</a></p> -->
    </div>
  </div>
</div>
<%- include("partials/footer.ejs"); -%>
